#include <windows.h>
#include <conio.h>
#include <stdio.h>

#define ARRIBA 72
#define IZQUIERDA 75
#define DERECHA 77
#define ABAJO 80

void GoToXY(int x,int y)
{
    HANDLE hCon;
    hCon = GetStdHandle(STD_OUTPUT_HANDLE);
    COORD dwPos;
    dwPos.X = x;
    dwPos.Y = y;
    SetConsoleCursorPosition(hCon, dwPos);
}

void OcultarCursor()
{
    HANDLE hCon;
    hCon = GetStdHandle(STD_OUTPUT_HANDLE);
    CONSOLE_CURSOR_INFO cci;
    cci.dwSize = 2;
    cci.bVisible = FALSE;
    SetConsoleCursorInfo(hCon,&cci);
}

class BALA{
private:
    int x,y;
public:
    BALA(int _x,int _y);
    void pintar();
    void borrar();
    void mover();
};

BALA::BALA(int _x=0,int _y=0)
{
    x = _x;y = _y;
}

void BALA::pintar()
{
    GoToXY(x,y);  printf("%c",216);
}

void BALA::borrar()
{
    GoToXY(x,y);  printf(" ");
}

void BALA::mover()
{
    borrar();
    y--;
    pintar();
}

class BULLETARRAY{
private:
    class BALA *barray;
    int tam;
public:
    BULLETARRAY();
    BULLETARRAY(class BULLETARRAY &ba);
    void newtam(int tamanio);
    void moverlas();
    void insertar(class BALA balita);
    void remover(class BALA balita);
};

BULLETARRAY::BULLETARRAY(){
    tam = 0;
}

BULLETARRAY::BULLETARRAY(class BULLETARRAY &ba){
    barray = new(BALA[ba.tam]);
    barray = ba.barray;
    tam = ba.tam;
}

void BULLETARRAY::newtam(int tamanio){
    class BALA *nuevo=new BALA[tamanio];
    nuevo = barray;
    delete[] barray;
    barray = new BALA[tamanio];
    barray = nuevo;
    delete[] nuevo;
}

void BULLETARRAY::moverlas(){

}

void BULLETARRAY::insertar(class BALA balita){

}

void BULLETARRAY::remover(class BALA balita){

}

class NAVE{
private:
    int x,y;
    class BULLETARRAY balitas;
public:
    NAVE(int _x, int _y);
    void pintar();
    void borrar();
    void mover();
protected:
};

NAVE::NAVE(int _x,int _y)
{
    x = _x;y = _y;
}

void NAVE::pintar()
{
    GoToXY(x+2,y);  printf("%c",30);
    GoToXY(x+1,y+1);printf("%c%c%c",40,207,41);
    GoToXY(x,y+2);printf("%c%c %c%c",30,190,190,30);

}

void NAVE::borrar()
{
    GoToXY(x+2,y);  printf("     ");
    GoToXY(x+1,y+1);printf("      ");
    GoToXY(x,y+2);printf("       ");

}

void NAVE::mover()
{
    if (kbhit()){
            char tecla = getch();
            borrar();
            if(tecla == IZQUIERDA && x > 1) x--;
            if(tecla == DERECHA && x < 81) x++;
            if(tecla == ARRIBA && y > 1) y--;
            if(tecla == ABAJO && y < 81) y++;
            if(tecla == 'f') {BALA b(x+2,y-1);b.pintar();}
            pintar();
    }
}

int main()
{
    OcultarCursor();
    NAVE N(7,7);
    BULLETARRAY balitas;
    N.pintar();
    bool game_over = false;
    while(!game_over){
        N.mover();
        balitas.moverlas();
        Sleep(10);
    }
    return 0;
}
